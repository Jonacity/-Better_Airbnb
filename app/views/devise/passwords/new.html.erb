<div class="password-banner" id="banner-for-new" style="background-image: linear-gradient(to right, rgba(118, 184, 82,0.3) 10%, rgba(141, 194, 111,0.3) 70%), url(<%= image_path('password1.jpg') %>);">
  <div class="sign-in-flex">
    <div class="new-form-password">
      <div class="sign-in-h2">Forgot your password?</div>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, input_html: {class: "input-from-new"} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Reset password instructions" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
